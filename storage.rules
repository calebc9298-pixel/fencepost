rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Posts folder - authenticated users can upload, anyone can read
    match /posts/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024 // 50MB max
        && request.resource.contentType.matches('(image|video)/.*'); // Images or videos
    }
    
    // Profiles folder - users can upload their own profile pictures
    match /profiles/{userId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*');
    }
  }
}
